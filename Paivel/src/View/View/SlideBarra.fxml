            <FontAwesomeIcon iconName="HOME" size="2em" styleClass="janela-btn-icon" />
         </graphic>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </JFXButton>
      <JFXButton alignment="TOP_LEFT" layoutX="10.0" layoutY="198.0" prefHeight="35.0" prefWidth="250.0" styleClass="janela-btn" text="Eventos">
         <graphic>
            <FontAwesomeIcon iconName="HOME" size="2em" styleClass="janela-btn-icon" />
         </graphic>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </JFXButton>
      <Label disable="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="250.0" text="Administrador" textFill="#b8b1b1">
         <padding>
            <Insets left="10.0" />
         </padding>
         <font>
            <Font name="System Bold" size="17.0" />
         </font>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <JFXButton fx:id="btnConfig" alignment="TOP_LEFT" disable="true" layoutX="10.0" layoutY="308.0" onAction="#open_config" prefHeight="35.0" prefWidth="250.0" styleClass="janela-btn" text="Configuracoes">
         <graphic>
            <FontAwesomeIcon iconName="HOME" size="2em" styleClass="janela-btn-icon" />
         </graphic>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="btnUsuario" alignment="TOP_LEFT" disable="true" layoutX="10.0" layoutY="344.0" onAction="#open_usuario" prefHeight="35.0" prefWidth="250.0" styleClass="janela-btn" text="Usuarios">
         <graphic>
            <FontAwesomeIcon iconName="USERS" size="2em" styleClass="janela-btn-icon" />
         </graphic>
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </JFXButton>
   </children>
</VBox>
